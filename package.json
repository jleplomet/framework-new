{
  "name": "framework-basic",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "test": "jest --verbose",
    "clean": "rimraf dist",
    "dev": "NODE_ENV=development node server",
    "build:webpack": "NODE_ENV=production webpack --optimize-minimize --config webpack/production.js --color",
    "build": "npm run clean && npm run build:webpack"
  },
  "proxy": {
    "/": {
      "target": "http://framework-new.dev",
      "secure": false
    }
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "chrome": 57,
            "browsers": ["last 1 version"]
          },
          "debug": false,
          "modules": false
        }
      ]
    ],
    "plugins": [
      "transform-object-rest-spread",
      "syntax-dynamic-import",
      [
        "transform-runtime",
        {
          "helpers": false,
          "polyfill": false,
          "regenerator": true
        }
      ]
    ],
    "env": {
      "development": {
        "presets": []
      },
      "test": {
        "plugins": ["transform-es2015-modules-commonjs"]
      }
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {
        "browsers": ["last 2 versions"]
      }
    }
  },
  "jest": {
    "transformIgnorePatterns": ["[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"]
  },
  "devDependencies": {
    "autoprefixer": "^7.1.2",
    "babel-core": "^6.25.0",
    "babel-jest": "^20.0.3",
    "babel-loader": "^7.1.1",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "1.6.0",
    "bundle-loader": "^0.5.5",
    "chalk": "^2.0.1",
    "clean-webpack-plugin": "^0.1.16",
    "copy-webpack-plugin": "^4.0.1",
    "css-loader": "^0.28.4",
    "detect-port": "^1.2.1",
    "eslint": "^4.3.0",
    "exports-loader": "^0.6.4",
    "extract-text-webpack-plugin": "^3.0.0",
    "file-loader": "^0.11.2",
    "html-webpack-plugin": "^2.29.0",
    "ip": "^1.1.5",
    "jest": "^20.0.4",
    "node-sass": "^4.5.3",
    "postcss-loader": "^2.0.6",
    "react-dev-utils": "^3.0.2",
    "rimraf": "^2.6.1",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.18.2",
    "sw-precache-webpack-plugin": "^0.11.4",
    "webpack": "^3.3.0",
    "webpack-bundle-analyzer": "^2.8.3",
    "webpack-dev-server": "^2.6.1"
  },
  "dependencies": {
    "babel-polyfill": "^6.23.0",
    "classnames": "^2.2.5",
    "es6-promise": "^4.1.1",
    "fbemitter": "^2.1.1",
    "whatwg-fetch": "^2.0.3"
  }
}
